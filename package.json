{
  "name": "nest-typescript-starter",
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "build": "node --max_old_space_size=4096 ./node_modules/gulp/bin/gulp.js build",
    "fix": "tslint -p tsconfig.json -c tslint.json --fix",
    "prepublish": "node --max_old_space_size=4096 ./node_modules/gulp/bin/gulp.js build",
    "publish": "node ./node_modules/lerna/bin/lerna.js publish -m \"chore(release): publish %s\"",
    "start": "node ./starter/index.js",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "check": "tslint -p tsconfig.json -c tslint.json"
  },
  "dependencies": {
    "@nestjs/common": "^5.0.1",
    "@nestjs/core": "^5.0.1",
    "@nestjs/graphql": "^3.0.0",
    "@nestjs/microservices": "^5.0.1",
    "@nestjs/testing": "^5.0.1",
    "@nestjs/typeorm": "^5.0.2",
    "@nestjs/websockets": "^5.0.1",
    "@types/ejs": "^2.5.1",
    "@types/nodemailer": "^4.6.0",
    "apollo-server-express": "^1.3.6",
    "ejs": "^2.5.9",
    "email-templates": "^4.0.1",
    "graphql": "^0.13.2",
    "graphql-tools": "^3.0.4",
    "graphql-type-json": "^0.2.1",
    "nodemailer": "^4.6.4",
    "pg": "^7.4.1",
    "pug": "^2.0.3",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.1",
    "typeorm": "^0.2.15",
    "typescript": "^2.6.2"
  },
  "devDependencies": {
    "@types/express": "^4.0.39",
    "@notadd/gulp-typescript": "~4.0.2",
    "@types/chance": "^1.0.0",
    "@types/graphql": "^0.13.1",
    "@types/node": "^10.1.2",
    "@types/request": "^2.47.0",
    "gulp": "^3.9.1",
    "gulp-clang-format": "^1.0.23",
    "gulp-nodemon": "^2.2.1",
    "gulp-rename": "^1.2.2",
    "gulp-sequence": "^0.4.6",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-tslint": "^8.1.3",
    "gulp-watch": "^4.3.11",
    "lerna": "^2.5.1",
    "nodemon": "^1.17.5",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
